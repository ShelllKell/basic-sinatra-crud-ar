  <h1>Welcome, <%= session[:user]["username"] %></h1>
  <form method="post" action="/log_out">
    <input class="button" type="submit" value="Log Out"/>
  </form>

  <h1>Other Users:</h1>

  <ul>
    <% @users.each do |user| %>
    <li>
      <%= user %>
    </li>
    <%end%>
  </ul>


  <% end %>

